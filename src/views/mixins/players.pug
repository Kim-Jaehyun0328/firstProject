mixin player(info)
  div 
    h4 #{info.name}
    ul
      li position: #{info.position}
      li age: #{info.age}

mixin video(info)
  div
    h4
      a(href=`/videos/${info.id}`)=info.title
    ul
      li #{info.meta.rating}/5
      li #{info.description}
      li posted #{info.createdAt}
      li #{info.hashtags}
      li #{info.meta.views} views.


mixin showComments(info)
  each comment in info.comments
    li #{comment}